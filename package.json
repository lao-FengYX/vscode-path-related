{
  "name": "path-related",
  "displayName": "path-related",
  "description": "路径提示",
  "version": "0.0.1",
  "author": "Lao Feng",
  "publisher": "LaoFeng",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "email": "laofyx@163.com",
    "url": "/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "path",
    "path-related",
    "path-support",
    "path-completion",
    "path-suggest",
    "path-completion",
    "path-suggestion",
    "path-jump",
    "path-alias"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "path-related",
      "properties": {
        "path-related.pathAlias": {
          "type": "object",
          "description": "路径别名",
          "default": {
            "@": "${workspaceFolder}/src"
          }
        },
        "path-related.ignoreHiddenFiles": {
          "type": "boolean",
          "description": "忽略隐藏文件",
          "default": true
        },
        "path-related.ignoreFileExt": {
          "type": "array",
          "description": "忽略文件后缀",
          "default": [
            ".js",
            ".ts",
            ".jsx",
            ".tsx",
            ".d.ts"
          ]
        },
        "path-related.autoNextSuggest": {
          "type": "boolean",
          "description": "自动提示下一个建议",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && pnpm run lint:prettier && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "lint:prettier": "prettier --write src/",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  }
}
